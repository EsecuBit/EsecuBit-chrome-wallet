        // S300
        {
          "vendorId": 7848,   // 0x1ea8
          "productId": 32778  // 0x800a
        }
      ]
    }
  ],
    "optional_permissions": [ {"usbDevices": [{"vendorId": 7848, "productId": 49189}]}]
